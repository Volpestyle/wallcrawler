{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Claude Code Lint Current File",
      "type": "shell",
      "command": ".vscode/claude-lint.sh",
      "args": ["${relativeFile}", "${workspaceFolder}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
